
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

     <TextView
         android:id="@+id/opt_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/options" 
         android:layout_gravity="center"
         android:clickable="false"
         android:fontFamily="sans-serif-thin"
         android:textSize="25sp"
         android:layout_marginLeft="16dp"
		 android:layout_marginRight="16dp"
		 android:layout_marginBottom="4dp"
		 android:layout_marginTop="4dp"
		 android:textColor="#666666"
         android:textStyle="bold"/>

<!--  SEPARADOR 3 COLORES  -->
             <LinearLayout
                android:baselineAligned="false"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@android:color/white"
                android:weightSum="3" >
	             <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="2dp"
	                android:layout_weight="1"
	                android:background="@color/Holo_red" >
	             </LinearLayout>
	             <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="2dp"
	                android:layout_weight="1"
	                android:background="@color/Holo_yellow" >
	             </LinearLayout>
	             <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="2dp"
	                android:layout_weight="1"
	                android:background="@color/Holo_green" >
	             </LinearLayout> 
             </LinearLayout>
<!--  //SEPARADOR 3 COLORES  -->
     <TextView
         android:id="@+id/opt_ip"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/rpiip" 
         android:layout_gravity="center"
         android:layout_marginTop="8dp"
         android:clickable="false"
         android:fontFamily="sans-serif-thin" 
         android:textSize="17sp"
         android:textColor="#888888"
         android:textStyle="bold"/>
     
          <TextView
         android:id="@+id/opt_ip2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/ip2" 
         android:layout_gravity="center"
         android:layout_marginTop="0dp"
         android:layout_marginLeft="4dp"
         android:layout_marginRight="4dp"
         android:clickable="false"
         android:fontFamily="sans-serif-thin" 
         android:textSize="12sp"
         android:textColor="#888888"
         android:textStyle="italic"/>
     

    <EditText
        android:id="@+id/ip_rpi"
        android:inputType="phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:textColor="#444444"
        android:textColorHint="#bbbbbb" />
</LinearLayout>